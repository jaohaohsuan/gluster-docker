{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "gluster-test"
    },
    "spec": {
        "nodeSelector": { "role": "master" },
        "containers": [
            {
                "name": "alpine",
                "image": "alpine:latest",
                "command": [ "top"],
"resources":{
        "limits":{
          "cpu": 0.3,
          "memory": "1Gi"
        }
      },
     "env":[
	{ "name": "TERM", "value": "xterm"}
],
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/test-volume",
                        "name": "glusterfsvol"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "glusterfsvol",
                "glusterfs": {
                    "endpoints": "gluster",
                    "path": "test-volume",
                    "readOnly": false
                }
            }
        ]
    }
}
